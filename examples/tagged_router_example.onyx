#load "core/std"
#load "./../module"

// This prevents you from having to type
// http.Request and http.Response over and
// over again...
use http
use http.server {
    Req :: Request,
    Res :: Response,
}

#tag http.server.route.{.GET, "/index"}
(req: &Req, res: &Res) {
    res->status(200);
    res->html("From a tag!");
}

main :: () {
    app := http.server.application();

    router := http.server.router();
    router->collect_routes();

    app->pipe(&router);
    app->serve(8080);
}
